# Production Environment Configuration Template
# Copy this to .env.production and update with your actual values

# Application Settings
API_PORT=8000
ENVIRONMENT=production
LOG_LEVEL=INFO
SECRET_KEY=your-super-secret-key-change-this-in-production
VERSION=latest

# Database Configuration
DB_NAME=hsqforms
DB_USER=hsqforms
DB_PASSWORD=your-secure-database-password
DB_PORT=5432

# CORS Settings (comma-separated URLs)
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Optional: External Database URL (overrides individual DB settings)
# DATABASE_URL=postgresql://user:password@hostname:5432/database

# Container Registry (for CI/CD)
REGISTRY_URL=your-registry.azurecr.io
REGISTRY_USERNAME=your-registry-username
REGISTRY_PASSWORD=your-registry-password

# Deployment Settings
DEPLOY_TIMEOUT=300
HEALTH_CHECK_TIMEOUT=60
BACKUP_BEFORE_DEPLOY=true
