# HSQ Forms API - Example Environment Variables
# Copy this file to .env and populate with your values

# Basic Application Settings
APP_NAME=HSQ Forms API
ENVIRONMENT=development  # development, staging, production
DEBUG=false
TESTING=false
LOG_LEVEL=info  # debug, info, warning, error, critical

# API Settings
API_VERSION=1.0.0
API_TITLE=HSQ Forms API
API_DESCRIPTION=A flexible form submission API for handling form data
API_PREFIX=/api
API_DOCS_URL=/docs
API_REDOC_URL=/redoc

# Database Settings
POSTGRES_DB=hsq_forms
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30

# CORS Settings (comma-separated list for origins)
CORS_ORIGINS=http://localhost:3000,https://example.com
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOW_HEADERS=Accept,Authorization,Content-Type,X-API-Key

# Storage Settings
STORAGE_TYPE=local  # local or azure
LOCAL_STORAGE_PATH=./uploads
TEMP_UPLOAD_DIR=./uploads/temp

# Azure Storage Settings (required if STORAGE_TYPE=azure)
AZURE_STORAGE_ACCOUNT_NAME=
AZURE_STORAGE_ACCOUNT_KEY=
AZURE_STORAGE_CONNECTION_STRING=
AZURE_STORAGE_CONTAINER_NAME=form-attachments
AZURE_BLOB_EXPIRY_DAYS=30

# Security Settings
SECRET_KEY=development_secret_key_change_in_production
ACCESS_TOKEN_EXPIRE_MINUTES=60
API_KEY_HEADER_NAME=X-API-Key
ALLOWED_API_KEYS=key1,key2  # Comma-separated list of allowed API keys

# Form Submission Settings
MAX_ATTACHMENT_SIZE_MB=10
MAX_FORM_SIZE_KB=2048
MAX_FILES_PER_SUBMISSION=5
ALLOWED_FILE_TYPES=application/pdf,image/jpeg,image/png,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document,application/vnd.ms-excel,application/vnd.openxmlformats-officedocument.spreadsheetml.sheet,text/plain
